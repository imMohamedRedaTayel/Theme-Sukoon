<!-- ===== SUKOON EMPTY STATE ===== -->
<div class="flex justify-center items-center">
    <div class="text-center max-w-sm px-4 py-8">

        <!-- Icon -->
        <div class="mx-auto w-16 h-16 flex items-center justify-center mb-6" style="color: var(--color-text-tertiary);">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" stroke-width="1" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4zM3 6h18M16 10a4 4 0 01-8 0"/>
            </svg>
        </div>

        <!-- Text -->
        <h3 class="text-[20px] font-light tracking-[-0.01em] mb-2" style="color: var(--color-text-primary);">
            {{ data.title | default(t('cart.empty_title') | default('Your cart is empty')) }}
        </h3>
        <p class="text-[14px] mb-8" style="color: var(--color-text-secondary);">
            {{ data.subtitle | default(t('cart.empty_subtitle') | default('Discover something you love')) }}
        </p>

        <!-- Actions -->
        <div class="flex flex-col gap-3">
            <a href="{{ data.BtnUrl | default('/collections') }}" class="btn btn-primary w-full py-3">
                {{ data.BtnText | default(t('cart.browse') | default('Explore collections')) }}
            </a>
            <a href="/latest" class="btn btn-ghost">
                {{t('cart.continue_shopping') | default('Continue browsing')}}
            </a>
        </div>

    </div>
</div>
