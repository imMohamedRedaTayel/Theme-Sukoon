{# Cart Drawer (Mini Cart) #}
<div x-data="cartInteraction({
  items: [{% for item in cart.items %}{id:'{{ item._id }}',qty:{{ item.quantity }}}{% if not loop.last %},{% endif %}{% endfor %}]
})" x-cloak>

  {# Overlay #}
  <div x-show="$store.modal.current === 'cart'"
       @click="$store.modal.close()"
       class="overlay"
       x-transition:enter="transition ease-out duration-300"
       x-transition:enter-start="opacity-0"
       x-transition:enter-end="opacity-100"
       x-transition:leave="transition ease-in duration-200"
       x-transition:leave-start="opacity-100"
       x-transition:leave-end="opacity-0">
  </div>

  {# Drawer #}
  <div class="drawer drawer-end flex flex-col"
       :class="{ 'open': $store.modal.current === 'cart' }">

    {# ===== Header ===== #}
    <div class="flex-shrink-0 px-5 pt-5 pb-4">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-bold text-gray-900">{{t('pages.cart.title')}}</h2>
        <button @click="$store.modal.close()"
                class="w-9 h-9 flex items-center justify-center rounded-full bg-gray-100 hover:bg-gray-200 text-gray-500 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"/></svg>
        </button>
      </div>

      {# Items count bar #}
      <div class="flex items-center justify-between text-xs" data-cart-count-bar
           style="{% if not cart.items | length %}display:none{% endif %}">
        <span class="text-gray-400"><span data-cart-count>{{ cart.totalQuantity | default(0) }}</span> {{t('common.products')}}</span>
        <a href="/cart" @click="$store.modal.close()" class="text-primary font-medium hover:underline">{{t('common.view_all')}}</a>
      </div>
    </div>

    {# ===== Cart Items ===== #}
    <div class="flex-1 overflow-y-auto custom-scrollbar px-5 pb-4" data-cart-container
         style="{% if not cart.items | length %}display:none{% endif %}">
      <div class="space-y-4">
        {% for item in cart.items %}
          <div class="transition-all duration-300"
               data-cart-item="{{ item._id }}"
               x-show="activeItems.includes('{{ item._id }}')"
               x-transition:leave="transition ease-in duration-200"
               x-transition:leave-start="opacity-100"
               x-transition:leave-end="opacity-0"
               :class="{ 'opacity-20 scale-95 pointer-events-none': removingId === '{{ item._id }}' }">

            {# Product Card #}
            <div class="flex gap-3.5">
              {# Image #}
              <a href="/product/{{ item.productData.slug }}" @click="$store.modal.close()" class="shrink-0">
                {% if item.productData.image and item.productData.image.fileUrl %}
                  <div class="w-20 h-20 rounded-2xl overflow-hidden bg-gray-50 border border-gray-100">
                    <img src="{{ item.productData.image.fileUrl }}"
                         alt="{{ item.productData.title }}"
                         class="w-full h-full object-cover"
                         loading="lazy">
                  </div>
                {% else %}
                  <div class="w-20 h-20 rounded-2xl bg-gray-50 border border-gray-100 flex items-center justify-center">
                    <svg class="w-7 h-7 text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                  </div>
                {% endif %}
              </a>

              {# Details #}
              <div class="flex-1 min-w-0">
                {# Title + Remove #}
                <div class="flex items-start justify-between gap-2">
                  <a href="/product/{{ item.productData.slug }}"
                     @click="$store.modal.close()"
                     class="text-[13px] font-semibold text-gray-800 hover:text-primary transition-colors line-clamp-2 leading-snug">
                    {{ item.productData.title }}
                  </a>
                  <button @click="removeItem('{{ item._id }}')"
                          class="shrink-0 mt-0.5 text-gray-300 hover:text-red-400 transition-colors p-0.5">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
                  </button>
                </div>

                {# Variant Options #}
                {% if item.variantData and item.variantData.options | length > 0 %}
                  <div class="flex flex-wrap items-center gap-x-2.5 gap-y-0.5 mt-1">
                    {% for opt in item.variantData.options %}
                      <span class="text-[11px] text-gray-400 flex items-center gap-1">
                        {{ opt.option.name }}:
                        {% if opt.option.type == 'color' %}
                          <span class="inline-block w-3 h-3 rounded-full border border-gray-200 align-middle" style="background-color: {{ opt.value | default('#fff') }}"></span>
                        {% endif %}
                        <span class="text-gray-500">{{ opt.label }}</span>
                      </span>
                    {% endfor %}
                  </div>
                {% endif %}

                {# Price + Qty Row #}
                <div class="flex items-center justify-between mt-2.5">
                  {# Quantity #}
                  <div class="inline-flex items-center bg-gray-50 rounded-full h-8">
                    <button @click="decrement('{{ item._id }}')"
                            class="w-8 h-8 rounded-full flex items-center justify-center text-gray-400 hover:text-primary hover:bg-white transition-all">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M20 12H4"/></svg>
                    </button>
                    <span class="w-7 text-center text-xs font-bold text-gray-800">
                      <span x-show="updating !== '{{ item._id }}'"
                            x-text="quantities['{{ item._id }}']">{{ item.quantity }}</span>
                      <svg x-show="updating === '{{ item._id }}'" x-cloak class="w-3.5 h-3.5 animate-spin mx-auto text-primary" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/></svg>
                    </span>
                    <button @click="increment('{{ item._id }}')"
                            class="w-8 h-8 rounded-full flex items-center justify-center text-gray-400 hover:text-primary hover:bg-white transition-all">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"/></svg>
                    </button>
                  </div>

                  {# Price #}
                  <div class="text-end">
                    <span class="text-sm font-bold text-gray-900 transition-all" data-item-total="{{ item._id }}"
                          :class="{ 'animate-pulse text-primary': updating === '{{ item._id }}' }">
                      {{ item.totalPrice | money }}
                    </span>
                    {% if item.compareAtPrice and item.compareAtPrice > item.price %}
                      <span class="block text-[10px] text-gray-400 line-through">{{ item.totalCompareAtPrice | money }}</span>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>

          </div>

          {# Divider #}
          {% if not loop.last %}
            <div class="border-b border-gray-50"></div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    {# ===== Footer ===== #}
    <div class="flex-shrink-0" data-cart-footer
         style="{% if not cart.items | length %}display:none{% endif %}">

      {# Summary #}
      <div class="px-5 py-4 bg-gray-50/80 border-t border-gray-100">
        {% if cart.totalSavings > 0 %}
          <div class="flex items-center justify-between text-xs mb-2">
            <span class="text-green-600 font-medium">{{t('pages.cart.savings')}}</span>
            <span class="text-green-600 font-bold">-{{ cart.totalSavings | money }}</span>
          </div>
        {% endif %}
        <div class="flex items-center justify-between">
          <div>
            <span class="text-xs text-gray-400 block">{{t('pages.cart.total')}}</span>
            <span class="text-lg font-bold text-gray-900" data-cart-total>{{ cart.totalPrice | money }}</span>
          </div>
          <div class="flex items-center gap-1 text-[10px] text-gray-400">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
            {{t('pages.features.secure_payment')}}
          </div>
        </div>
      </div>

      {# Actions #}
      <div class="px-5 py-4 space-y-2.5">
        <a href="/cart"
           @click="$store.modal.close()"
           class="flex items-center justify-center gap-2 w-full py-3 border border-gray-200 text-gray-700 font-semibold rounded-2xl hover:border-gray-900 hover:text-gray-900 transition-all text-sm">
          {{t('pages.cart.view_cart') | default('View cart')}}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/></svg>
        </a>
        <a href="/checkout"
           @click="$store.modal.close()"
           class="flex items-center justify-center gap-2 w-full py-3.5 bg-gray-900 text-white font-semibold rounded-2xl hover:bg-gray-800 transition-colors text-sm">
          {{t('pages.cart.checkout')}}
          <svg class="w-4 h-4 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
        </a>
        <button @click="$store.modal.close()"
                class="w-full text-center text-xs text-gray-400 hover:text-primary py-1 transition-colors font-medium">
          {{t('pages.cart.continue_shopping')}}
        </button>
      </div>
    </div>

    {# ===== Empty State ===== #}
    <div class="flex-1 flex flex-col items-center justify-center px-8 text-center" data-cart-empty
         style="{% if cart.items | length %}display:none{% endif %}">
      <div class="w-20 h-20 mb-5 rounded-full bg-gray-50 flex items-center justify-center">
        <svg class="w-10 h-10 text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/></svg>
      </div>
      <p class="text-sm font-semibold text-gray-700 mb-1">{{t('cart.empty')}}</p>
      <p class="text-xs text-gray-400 mb-6 leading-relaxed max-w-[220px]">{{t('cart.empty_message')}}</p>
      <a href="/" @click="$store.modal.close()"
         class="inline-flex items-center gap-2 bg-gray-900 text-white text-xs font-semibold px-6 py-2.5 rounded-full hover:bg-gray-800 transition-colors">
        {{t('cart.continue_shopping')}}
        <svg class="w-3.5 h-3.5 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
      </a>
    </div>
  </div>
</div>
