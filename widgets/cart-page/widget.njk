{% set show_savings = widget.data.show_savings | default(true) %}
{% set continue_url = widget.data.continue_shopping_url | default('/') %}
{% set checkout_url = widget.data.checkout_url | default('/checkout') %}

<section class="py-8 md:py-14 min-h-[60vh] bg-section-a" x-data="cartInteraction({
  items: [{% for item in cart.items %}{id:'{{ item._id }}',qty:{{ item.quantity }}}{% if not loop.last %},{% endif %}{% endfor %}],
  confirmRemove: true
})">
  <div class="container mx-auto px-4 md:px-6 lg:px-8 max-w-6xl">

    <div x-show="activeItems.length > 0">

      {# ===== Breadcrumb + Title ===== #}
      <div class="mb-8 md:mb-12">
        <nav class="flex items-center gap-2 text-[11px] uppercase tracking-wider text-gray-400 mb-4">
          <a href="/" class="hover:text-gray-600 transition-colors">{{t('common.home')}}</a>
          <span class="text-gray-300">/</span>
          <span class="text-gray-600">{{t('pages.cart.title')}}</span>
        </nav>
        <div class="flex items-end justify-between">
          <div>
            <h1 class="text-2xl md:text-[32px] font-extralight tracking-tight text-gray-900">{{t('pages.cart.title')}}</h1>
            <p class="text-[13px] text-gray-400 mt-2 font-light"><span data-cart-count>{{ cart.totalQuantity }}</span> {{t('common.products')}}</p>
          </div>
          <a href="{{ continue_url }}"
             class="hidden md:inline-flex items-center gap-2 text-[13px] text-gray-400 hover:text-gray-700 transition-colors group font-medium">
            <svg class="w-4 h-4 rtl:rotate-180 group-hover:-translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19l-7-7 7-7"/></svg>
            {{t('pages.cart.continue_shopping')}}
          </a>
        </div>
      </div>

      {# ===== Main Grid ===== #}
      <div class="lg:grid lg:grid-cols-12 lg:gap-10 items-start">

        {# ===== Items Column ===== #}
        <div class="lg:col-span-8">

          {# Desktop Table Header #}
          <div class="hidden md:flex items-center text-[11px] uppercase tracking-wider text-gray-400 font-medium pb-4 mb-2 border-b border-gray-200/60 px-6">
            <span class="flex-1">{{t('common.products')}}</span>
            <span class="w-32 text-center">{{t('pages.cart.quantity') | default('Quantity')}}</span>
            <span class="w-28 text-end">{{t('pages.cart.total')}}</span>
            <span class="w-10"></span>
          </div>

          <div class="space-y-3 md:space-y-0 md:divide-y md:divide-gray-100">
          {% for item in cart.items %}
            <div class="relative bg-white md:bg-transparent rounded-2xl md:rounded-none border border-gray-100 md:border-0 p-4 md:px-6 md:py-5 transition-all duration-300"
                 x-show="activeItems.includes('{{ item._id }}')"
                 x-transition:leave="transition ease-in duration-200"
                 x-transition:leave-start="opacity-100 scale-100"
                 x-transition:leave-end="opacity-0 scale-95"
                 :class="{
                   'opacity-30 scale-[0.98] pointer-events-none': removingId === '{{ item._id }}',
                   'ring-2 ring-red-100': confirmRemoveId === '{{ item._id }}'
                 }">

              {# Confirm Remove Overlay #}
              <div x-show="confirmRemoveId === '{{ item._id }}'"
                   x-transition.opacity
                   x-cloak
                   class="absolute inset-0 bg-white/95 backdrop-blur-sm rounded-2xl md:rounded-xl z-10 flex items-center justify-center">
                <div class="text-center p-6">
                  <div class="w-14 h-14 mx-auto mb-4 bg-red-50 rounded-2xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                  </div>
                  <p class="text-sm text-gray-600 mb-5 font-light">{{t('pages.cart.remove_item')}}ØŸ</p>
                  <div class="flex items-center justify-center gap-3">
                    <button @click="confirmRemoveId = null"
                            class="px-5 py-2.5 text-xs font-medium text-gray-600 bg-gray-100 hover:bg-gray-200 rounded-xl transition-colors">
                      {{t('common.cancel')}}
                    </button>
                    <button @click="removeItem('{{ item._id }}')"
                            class="px-5 py-2.5 text-xs font-medium text-white bg-red-500 hover:bg-red-600 rounded-xl transition-colors">
                      {{t('common.delete')}}
                    </button>
                  </div>
                </div>
              </div>

              {# ===== Desktop Layout ===== #}
              <div class="hidden md:flex md:items-center md:gap-5">
                {# Image #}
                <a href="/product/{{ item.productData.slug }}" class="shrink-0 group/img">
                  {% if item.productData.image and item.productData.image.fileUrl %}
                    <div class="w-[88px] h-[88px] rounded-2xl overflow-hidden bg-gray-50 ring-1 ring-gray-100">
                      <img src="{{ item.productData.image.fileUrl }}"
                           alt="{{ item.productData.title }}"
                           class="w-full h-full object-cover group-hover/img:scale-105 transition-transform duration-500"
                           loading="lazy">
                    </div>
                  {% else %}
                    <div class="w-[88px] h-[88px] bg-gray-50 rounded-2xl ring-1 ring-gray-100 flex items-center justify-center">
                      <svg class="w-8 h-8 text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                    </div>
                  {% endif %}
                </a>

                {# Title + Variant + Unit Price #}
                <div class="flex-1 min-w-0">
                  <a href="/product/{{ item.productData.slug }}"
                     class="font-medium text-gray-800 hover:text-primary transition-colors line-clamp-2 text-[15px] leading-snug">
                    {{ item.productData.title }}
                  </a>
                  {% if item.variantData and item.variantData.options | length > 0 %}
                    <div class="flex flex-wrap items-center gap-x-3 gap-y-1 mt-1.5">
                      {% for opt in item.variantData.options %}
                        <span class="text-[11px] text-gray-400 flex items-center gap-1.5">
                          {{ opt.option.name }}:
                          {% if opt.option.type == 'color' %}
                            <span class="inline-block w-3.5 h-3.5 rounded-full border border-gray-200 shadow-sm align-middle" style="background-color: {{ opt.value | default('#fff') }}"></span>
                          {% endif %}
                          <span class="text-gray-600 font-medium">{{ opt.label }}</span>
                        </span>
                      {% endfor %}
                    </div>
                  {% endif %}
                  <div class="mt-2 flex items-baseline gap-2">
                    <span class="text-[13px] text-gray-500 font-medium">{{ item.price | money }}</span>
                    {% if item.compareAtPrice and item.compareAtPrice > item.price %}
                      <span class="text-[11px] text-gray-300 line-through">{{ item.compareAtPrice | money }}</span>
                      <span class="text-[10px] font-semibold text-red-500 bg-red-50 px-1.5 py-0.5 rounded-md">{{t('product.sale')}}</span>
                    {% endif %}
                  </div>
                </div>

                {# Quantity #}
                <div class="shrink-0 w-32 flex justify-center">
                  <div class="inline-flex items-center border border-gray-200 rounded-xl">
                    <button @click="decrement('{{ item._id }}')"
                            class="w-9 h-9 flex items-center justify-center text-gray-400 hover:text-gray-700 transition-colors">
                      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/></svg>
                    </button>
                    <span class="w-10 h-9 flex items-center justify-center text-sm font-semibold text-gray-800 border-x border-gray-200">
                      <span x-show="updating !== '{{ item._id }}'"
                            x-text="quantities['{{ item._id }}']">{{ item.quantity }}</span>
                      <svg x-show="updating === '{{ item._id }}'" x-cloak class="w-4 h-4 animate-spin text-primary" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/></svg>
                    </span>
                    <button @click="increment('{{ item._id }}')"
                            class="w-9 h-9 flex items-center justify-center text-gray-400 hover:text-gray-700 transition-colors">
                      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
                    </button>
                  </div>
                </div>

                {# Line Total #}
                <div class="shrink-0 w-28 text-end">
                  <span class="font-semibold text-gray-900 text-[15px] transition-all"
                        data-item-total="{{ item._id }}"
                        :class="{ 'animate-pulse text-primary': updating === '{{ item._id }}' }">
                    {{ item.totalPrice | money }}
                  </span>
                </div>

                {# Remove #}
                <button @click="confirmRemoveId = '{{ item._id }}'"
                        class="shrink-0 w-10 h-10 rounded-xl flex items-center justify-center text-gray-300 hover:text-red-400 hover:bg-red-50 transition-all duration-200"
                        title="{{t('pages.cart.remove')}}">
                  <svg class="w-[18px] h-[18px]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                </button>
              </div>

              {# ===== Mobile Layout ===== #}
              <div class="md:hidden">
                <div class="flex gap-3.5">
                  <a href="/product/{{ item.productData.slug }}" class="shrink-0">
                    {% if item.productData.image and item.productData.image.fileUrl %}
                      <div class="w-[82px] h-[82px] rounded-2xl overflow-hidden bg-gray-50 ring-1 ring-gray-100">
                        <img src="{{ item.productData.image.fileUrl }}"
                             alt="{{ item.productData.title }}"
                             class="w-full h-full object-cover"
                             loading="lazy">
                      </div>
                    {% else %}
                      <div class="w-[82px] h-[82px] bg-gray-50 rounded-2xl ring-1 ring-gray-100 flex items-center justify-center">
                        <svg class="w-7 h-7 text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                      </div>
                    {% endif %}
                  </a>
                  <div class="flex-1 min-w-0">
                    <div class="flex items-start justify-between gap-2">
                      <a href="/product/{{ item.productData.slug }}"
                         class="font-medium text-gray-800 line-clamp-2 text-[14px] leading-snug">
                        {{ item.productData.title }}
                      </a>
                      <button @click="confirmRemoveId = '{{ item._id }}'"
                              class="shrink-0 w-7 h-7 rounded-lg flex items-center justify-center text-gray-300 hover:text-red-400 transition-colors"
                              title="{{t('pages.cart.remove')}}">
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12"/></svg>
                      </button>
                    </div>
                    {% if item.variantData and item.variantData.options | length > 0 %}
                      <div class="flex flex-wrap items-center gap-x-2.5 gap-y-0.5 mt-1">
                        {% for opt in item.variantData.options %}
                          <span class="text-[11px] text-gray-400 flex items-center gap-1">
                            {{ opt.option.name }}:
                            {% if opt.option.type == 'color' %}
                              <span class="inline-block w-2.5 h-2.5 rounded-full border border-gray-200 align-middle" style="background-color: {{ opt.value | default('#fff') }}"></span>
                            {% endif %}
                            <span class="text-gray-600">{{ opt.label }}</span>
                          </span>
                        {% endfor %}
                      </div>
                    {% endif %}
                    <div class="mt-1.5 flex items-baseline gap-1.5">
                      <span class="text-[13px] font-semibold text-gray-900">{{ item.price | money }}</span>
                      {% if item.compareAtPrice and item.compareAtPrice > item.price %}
                        <span class="text-[11px] text-gray-300 line-through">{{ item.compareAtPrice | money }}</span>
                      {% endif %}
                    </div>
                  </div>
                </div>

                {# Quantity + Line Total #}
                <div class="flex items-center justify-between mt-3.5 pt-3.5 border-t border-gray-100/80">
                  <div class="inline-flex items-center border border-gray-200 rounded-xl">
                    <button @click="decrement('{{ item._id }}')"
                            class="w-8 h-8 flex items-center justify-center text-gray-400 hover:text-gray-700 transition-colors">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M20 12H4"/></svg>
                    </button>
                    <span class="w-9 h-8 flex items-center justify-center text-[13px] font-bold text-gray-800 border-x border-gray-200">
                      <span x-show="updating !== '{{ item._id }}'"
                            x-text="quantities['{{ item._id }}']">{{ item.quantity }}</span>
                      <svg x-show="updating === '{{ item._id }}'" x-cloak class="w-3.5 h-3.5 animate-spin text-primary" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/></svg>
                    </span>
                    <button @click="increment('{{ item._id }}')"
                            class="w-8 h-8 flex items-center justify-center text-gray-400 hover:text-gray-700 transition-colors">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"/></svg>
                    </button>
                  </div>
                  <span class="font-bold text-gray-900 text-[15px] transition-all"
                        data-item-total="{{ item._id }}"
                        :class="{ 'animate-pulse text-primary': updating === '{{ item._id }}' }">
                    {{ item.totalPrice | money }}
                  </span>
                </div>
              </div>

            </div>
          {% endfor %}
          </div>

          {# Mobile Continue Shopping #}
          <div class="pt-4 md:hidden">
            <a href="{{ continue_url }}"
               class="inline-flex items-center gap-2 text-[13px] text-gray-400 hover:text-gray-700 transition-colors font-medium">
              <svg class="w-4 h-4 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19l-7-7 7-7"/></svg>
              {{t('cart.continue_shopping')}}
            </a>
          </div>
        </div>

        {# ===== Order Summary ===== #}
        <div class="lg:col-span-4 mt-8 lg:mt-0 lg:sticky lg:top-24">
          <div class="bg-white rounded-3xl border border-gray-100 overflow-hidden shadow-sm shadow-gray-100/50">

            {# Header #}
            <div class="px-6 py-5 border-b border-gray-50">
              <h2 class="text-[15px] font-semibold text-gray-900 tracking-tight">{{t('pages.cart.order_summary')}}</h2>
            </div>

            <div class="px-6 py-5 space-y-5">

              {# Summary Details #}
              <div class="space-y-3.5">
                <div class="flex justify-between items-center">
                  <span class="text-[13px] text-gray-400">{{t('pages.cart.subtotal')}}</span>
                  <span class="text-[14px] text-gray-800 font-medium" data-cart-total>{{ cart.totalPrice | money }}</span>
                </div>

                {% if cart.totalSavings > 0 %}
                  <div class="flex justify-between items-center">
                    <span class="text-[13px] text-green-600">{{t('pages.cart.savings')}}</span>
                    <span class="text-[14px] text-green-600 font-medium">-{{ cart.totalSavings | money }}</span>
                  </div>
                {% endif %}

                {# Free Shipping Badge #}
                <div class="flex items-center gap-2.5 bg-emerald-50/70 text-emerald-700 text-[12px] px-4 py-3 rounded-2xl font-medium">
                  <svg class="w-4 h-4 shrink-0 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/></svg>
                  {{t('pages.cart.free_shipping_message')}}
                </div>
              </div>

              {# Total #}
              <div class="border-t border-gray-100 pt-5">
                <div class="flex items-center justify-between">
                  <span class="text-[14px] font-semibold text-gray-900">{{t('pages.cart.total')}}</span>
                  <span class="text-xl font-bold text-gray-900" data-cart-total>{{ cart.totalPrice | money }}</span>
                </div>
              </div>

              {# Checkout Button #}
              <a href="{{ checkout_url }}"
                 class="flex items-center justify-center gap-2.5 w-full py-4 bg-gray-900 text-white font-semibold rounded-2xl hover:bg-gray-800 active:scale-[0.98] transition-all duration-200 text-[15px]">
                {{t('pages.cart.checkout')}}
                <svg class="w-4 h-4 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
              </a>

              {# Trust Badges #}
              <div class="flex items-center justify-center gap-5 pt-1">
                <div class="flex items-center gap-1.5 text-[11px] text-gray-400">
                  <svg class="w-3.5 h-3.5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
                  {{t('pages.features.secure_payment')}}
                </div>
                <div class="w-px h-3 bg-gray-200"></div>
                <div class="flex items-center gap-1.5 text-[11px] text-gray-400">
                  <svg class="w-3.5 h-3.5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
                  {{t('pages.features.easy_returns')}}
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

    {# ===== Empty Cart ===== #}
    <div x-show="activeItems.length === 0"
         x-transition:enter="transition ease-out duration-300"
         x-transition:enter-start="opacity-0 scale-95"
         x-transition:enter-end="opacity-100 scale-100"
         style="{% if cart.items | length %}display:none{% endif %}">
      <div class="flex flex-col items-center justify-center py-24 md:py-36 max-w-sm mx-auto text-center">
        <div class="relative mb-10">
          <div class="w-36 h-36 bg-gray-100/80 rounded-full flex items-center justify-center">
            <svg class="w-16 h-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/></svg>
          </div>
          <div class="absolute -bottom-1 -end-1 w-11 h-11 bg-white rounded-full shadow-sm flex items-center justify-center border border-gray-100">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/></svg>
          </div>
        </div>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">{{t('cart.empty')}}</h2>
        <p class="text-[13px] text-gray-400 leading-relaxed mb-8 font-light">{{t('cart.empty_message')}}</p>
        <a href="{{ continue_url }}"
           class="inline-flex items-center gap-2.5 bg-gray-900 text-white font-semibold px-8 py-3.5 rounded-2xl hover:bg-gray-800 active:scale-[0.98] transition-all duration-200 text-[14px]">
          {{t('cart.continue_shopping')}}
          <svg class="w-4 h-4 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
        </a>
      </div>
    </div>

  </div>
</section>
