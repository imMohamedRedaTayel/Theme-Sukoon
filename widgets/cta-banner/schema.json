{
  "name": "بانر ترويجي",
  "settings": {
    "title": {
      "type": "string",
      "label": { "ar": "العنوان", "en": "Title" },
      "default": "عرض خاص لفترة محدودة"
    },
    "subtitle": {
      "type": "text",
      "label": { "ar": "العنوان الفرعي", "en": "Subtitle" },
      "default": ""
    },
    "badge_text": {
      "type": "string",
      "label": { "ar": "نص الشارة (مثل: خصم 50%)", "en": "Badge Text" },
      "default": ""
    },
    "image": {
      "type": "media",
      "label": { "ar": "صورة الخلفية", "en": "Background Image" }
    },
    "overlay_opacity": {
      "type": "range",
      "label": { "ar": "شفافية طبقة اللون", "en": "Overlay Opacity" },
      "default": 70, "min": 0, "max": 100, "step": 5
    },
    "show_countdown": {
      "type": "boolean",
      "label": { "ar": "إظهار العد التنازلي", "en": "Show Countdown" },
      "default": false
    },
    "countdown_date": {
      "type": "date-time",
      "label": { "ar": "تاريخ انتهاء العرض", "en": "Offer End Date" },
      "default": ""
    },
    "button_text": {
      "type": "string",
      "label": { "ar": "نص الزر", "en": "Button Text" },
      "default": "تسوقي الآن"
    },
    "button_link": {
      "type": "string",
      "label": { "ar": "رابط الزر", "en": "Button URL" },
      "default": "/products"
    },
    "button_style": {
      "type": "select",
      "label": { "ar": "شكل الزر", "en": "Button Style" },
      "default": "filled",
      "options": [
        { "value": "filled", "label": { "ar": "ممتلئ", "en": "Filled" } },
        { "value": "outline", "label": { "ar": "محدد فقط", "en": "Outline" } }
      ]
    },
    "text_alignment": {
      "type": "select",
      "label": { "ar": "محاذاة النص", "en": "Text Alignment" },
      "default": "center",
      "options": [
        { "value": "center", "label": { "ar": "وسط", "en": "Center" } },
        { "value": "start", "label": { "ar": "بداية", "en": "Start" } },
        { "value": "end", "label": { "ar": "نهاية", "en": "End" } }
      ]
    },
    "full_width": {
      "type": "boolean",
      "label": { "ar": "عرض كامل", "en": "Full Width" },
      "default": false
    },
    "background_color": {
      "type": "color",
      "label": { "ar": "لون الخلفية", "en": "Background Color" },
      "default": "#1A2C32"
    },
    "text_color": {
      "type": "select",
      "label": { "ar": "لون النص", "en": "Text Color" },
      "default": "white",
      "options": [
        { "value": "white", "label": { "ar": "أبيض", "en": "White" } },
        { "value": "dark", "label": { "ar": "داكن", "en": "Dark" } }
      ]
    },
    "height": {
      "type": "select",
      "label": { "ar": "ارتفاع البانر", "en": "Banner Height" },
      "default": "medium",
      "options": [
        { "value": "small", "label": { "ar": "صغير", "en": "Small" } },
        { "value": "medium", "label": { "ar": "متوسط", "en": "Medium" } },
        { "value": "large", "label": { "ar": "كبير", "en": "Large" } }
      ]
    },
    "pp": {
      "type": "spacing",
      "label": "Padding",
      "default": ""
    },
    "button_bg_color": {
      "type": "color",
      "label": { "ar": "لون خلفية الزر", "en": "Button Background" },
      "default": "#FFFFFF"
    },
    "button_text_color": {
      "type": "color",
      "label": { "ar": "لون نص الزر", "en": "Button Text Color" },
      "default": "#1A2C32"
    },
    "title_size": {
      "type": "select",
      "label": { "ar": "حجم العنوان", "en": "Title Size" },
      "default": "large",
      "options": [
        { "value": "small", "label": { "ar": "صغير", "en": "Small" } },
        { "value": "medium", "label": { "ar": "متوسط", "en": "Medium" } },
        { "value": "large", "label": { "ar": "كبير", "en": "Large" } }
      ]
    }
  },
  "presets": [{ "category": "الصفحة الرئيسية", "name": "بانر ترويجي" }]
}
