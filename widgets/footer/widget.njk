{# ===== SUKOON FOOTER ===== #}

{% set logo = widget.data.footer_logo %}
{% set description = widget.data.footer_description | safe %}
{% set menu1Title = widget.data.footer_menu_1_title | safe %}
{% set menu1 = widget.data.footer_menu_1 %}
{% set menu2Title = widget.data.footer_menu_2_title | safe %}
{% set menu2 = widget.data.footer_menu_2 %}
{% set socialX = widget.data.footer_social_x %}
{% set socialInstagram = widget.data.footer_social_instagram %}
{% set socialTiktok = widget.data.footer_social_tiktok %}
{% set socialSnapchat = widget.data.footer_social_snapchat %}
{% set hasSocial = socialX or socialInstagram or socialTiktok or socialSnapchat %}

<footer style="background: var(--color-footer);" class="pt-16 pb-8 max-sm:pt-12 max-sm:pb-6">
  <div class="px-12 max-lg:px-6 max-sm:px-4">

    {# ——— Top Section: Logo + Menus ——— #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 max-sm:gap-8 pb-12 max-sm:pb-8" style="border-bottom: 1px solid var(--color-footer-border);">

      {# Brand Column #}
      <div class="lg:col-span-2 flex flex-col gap-5">
        {% if logo %}
          <a href="/" class="inline-block w-fit">
            <img
              src="{{ logo.fileUrl }}"
              alt="{{ store.name }}"
              class="h-10 w-auto object-contain "
            />
          </a>
        {% endif %}
        {% if description %}
          <p class="text-[14px] leading-relaxed" style="color: var(--color-footer-text); max-width: 38ch;">
            {{ description }}
          </p>
        {% endif %}

        {# Social Icons #}
        {% if hasSocial %}
          <div class="flex items-center gap-4 mt-1">
            {% if socialInstagram %}
              <a href="{{ socialInstagram }}" target="_blank" rel="noopener" aria-label="Instagram"
                 class="transition-colors duration-200" style="color: var(--color-footer-text-muted);"
                 onmouseover="this.style.color='var(--color-accent)'" onmouseout="this.style.color='var(--color-footer-text-muted)'">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                  <rect x="2" y="2" width="20" height="20" rx="5" stroke-linecap="round"/>
                  <circle cx="12" cy="12" r="5" stroke-linecap="round"/>
                  <circle cx="17.5" cy="6.5" r="1" fill="currentColor" stroke="none"/>
                </svg>
              </a>
            {% endif %}
            {% if socialX %}
              <a href="{{ socialX }}" target="_blank" rel="noopener" aria-label="X"
                 class="transition-colors duration-200" style="color: var(--color-footer-text-muted);"
                 onmouseover="this.style.color='var(--color-accent)'" onmouseout="this.style.color='var(--color-footer-text-muted)'">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
            {% endif %}
            {% if socialTiktok %}
              <a href="{{ socialTiktok }}" target="_blank" rel="noopener" aria-label="TikTok"
                 class="transition-colors duration-200" style="color: var(--color-footer-text-muted);"
                 onmouseover="this.style.color='var(--color-accent)'" onmouseout="this.style.color='var(--color-footer-text-muted)'">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-2.88 2.5 2.89 2.89 0 01-2.89-2.89 2.89 2.89 0 012.89-2.89c.28 0 .54.04.79.1v-3.5a6.37 6.37 0 00-.79-.05A6.34 6.34 0 003.15 15.2a6.34 6.34 0 006.34 6.34 6.34 6.34 0 006.34-6.34V8.87a8.16 8.16 0 004.76 1.52v-3.4a4.85 4.85 0 01-1-.3z"/>
                </svg>
              </a>
            {% endif %}
            {% if socialSnapchat %}
              <a href="{{ socialSnapchat }}" target="_blank" rel="noopener" aria-label="Snapchat"
                 class="transition-colors duration-200" style="color: var(--color-footer-text-muted);"
                 onmouseover="this.style.color='var(--color-accent)'" onmouseout="this.style.color='var(--color-footer-text-muted)'">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12.206.793c.99 0 4.347.276 5.93 3.821.529 1.193.403 3.219.299 4.847l-.003.06c-.012.18-.022.345-.03.51.075.045.203.09.401.09.3-.016.659-.12.922-.214.14-.05.273-.096.395-.13a.93.93 0 01.268-.04c.326 0 .598.164.724.439.167.366-.024.75-.192.99-.06.088-.227.28-.439.413-.232.143-.588.283-1.073.283-.2 0-.42-.026-.65-.079a1.42 1.42 0 00-.268-.03c-.078 0-.147.01-.205.03-.138.047-.257.164-.377.403-.188.37-.36.755-.637 1.064-.372.416-.84.73-1.412.948-.21.08-.437.152-.674.215.012.047.044.103.103.173.128.148.35.283.475.355.064.04.135.084.19.12.315.2.587.43.657.715.038.148.023.297-.04.438-.108.237-.32.406-.535.504-.36.164-.79.235-1.28.235-.33 0-.654-.04-.913-.082a3.98 3.98 0 00-.634-.06c-.078 0-.173.01-.27.03-.2.04-.41.157-.627.302-.42.282-.888.622-1.619.622s-1.2-.34-1.619-.622a2.89 2.89 0 00-.627-.302c-.098-.02-.19-.03-.27-.03-.21 0-.44.02-.635.06-.258.04-.582.082-.913.082-.49 0-.92-.07-1.28-.235a1.04 1.04 0 01-.534-.504.65.65 0 01-.04-.438c.07-.284.342-.515.657-.715.055-.036.126-.08.19-.12.125-.072.347-.207.475-.355.06-.07.09-.126.103-.173a6.04 6.04 0 01-.674-.215c-.572-.218-1.04-.532-1.412-.948-.277-.309-.449-.694-.637-1.064-.12-.24-.24-.356-.377-.403a.575.575 0 00-.205-.03 1.42 1.42 0 00-.268.03c-.23.053-.45.079-.65.079-.485 0-.84-.14-1.073-.283a1.87 1.87 0 01-.44-.414c-.166-.24-.358-.623-.191-.989.127-.275.4-.44.724-.44a.93.93 0 01.268.04c.122.035.255.08.395.131.263.094.622.23.922.214.199 0 .326-.045.401-.09a6.37 6.37 0 01-.03-.51l-.003-.06c-.104-1.628-.23-3.654.3-4.847C5.447 1.069 8.803.793 9.794.793h.413z"/>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>

      {# Menu 1 #}
      {% if menu1 %}
        <div class="flex flex-col gap-4">
          {% if menu1Title %}
            <h4 class="text-[13px] font-medium uppercase tracking-[0.08em]" style="color: var(--color-footer-heading);">
              {{ menu1Title }}
            </h4>
          {% endif %}
          <ul class="flex flex-col gap-3">
            {% for item in menu1 %}
              <li>
                <a href="{{ item.url | default('#') }}" class="text-[14px] transition-colors duration-200" style="color: var(--color-footer-text);"
                   onmouseover="this.style.color='var(--color-footer-heading)'" onmouseout="this.style.color='var(--color-footer-text)'">
                  {{ item.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {# Menu 2 #}
      {% if menu2 %}
        <div class="flex flex-col gap-4">
          {% if menu2Title %}
            <h4 class="text-[13px] font-medium uppercase tracking-[0.08em]" style="color: var(--color-footer-heading);">
              {{ menu2Title }}
            </h4>
          {% endif %}
          <ul class="flex flex-col gap-3">
            {% for item in menu2 %}
              <li>
                <a href="{{ item.url | default('#') }}" class="text-[14px] transition-colors duration-200" style="color: var(--color-footer-text);"
                   onmouseover="this.style.color='var(--color-footer-heading)'" onmouseout="this.style.color='var(--color-footer-text)'">
                  {{ item.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </div>

    {# ——— Bottom Bar ——— #}
    <div class="flex items-center justify-between pt-8 max-sm:pt-6 max-sm:flex-col max-sm:gap-4">
      <p class="text-[13px]" style="color: var(--color-footer-text-muted);">
        &copy; {{ "now" | date("Y") }} {{ store.name }}. {{ t('blocks.footer.rights') | default('All rights reserved') }}
      </p>
      <div class="flex items-center gap-6">
        <a href="/pages/privacy-policy" class="text-[13px] transition-colors duration-200" style="color: var(--color-footer-text-muted);"
           onmouseover="this.style.color='var(--color-footer-text)'" onmouseout="this.style.color='var(--color-footer-text-muted)'">
          {{ t('blocks.footer.privacy') | default('Privacy Policy') }}
        </a>
        <a href="/pages/terms" class="text-[13px] transition-colors duration-200" style="color: var(--color-footer-text-muted);"
           onmouseover="this.style.color='var(--color-footer-text)'" onmouseout="this.style.color='var(--color-footer-text-muted)'">
          {{ t('blocks.footer.terms') | default('Terms & Conditions') }}
        </a>
      </div>
    </div>

  </div>
</footer>
