{# ===== SUKOON ABOUT PAGE ===== #}

{% set heroTitle = widget.data.hero_title | safe %}
{% set heroSubtitle = widget.data.hero_subtitle | safe %}
{% set heroImage = widget.data.hero_image %}
{% set storyTitle = widget.data.story_title | safe %}
{% set storyText = widget.data.story_text | safe %}
{% set storyImage = widget.data.story_image %}
{% set missionTitle = widget.data.mission_title | safe %}
{% set missionText = widget.data.mission_text | safe %}
{% set valuesTitle = widget.data.values_title | safe %}
{% set values = widget.blocks %}


{# ═══════════════════════════════════════ #}
{# ——— 1. HERO ——— #}
{# ═══════════════════════════════════════ #}

<section class="relative overflow-hidden"
         style="background: linear-gradient(135deg, #1A2C32 0%, #142328 100%);">

  {# Hero Image #}
  {% if heroImage and heroImage.fileUrl %}
    <img src="{{ heroImage.fileUrl }}" alt="{{ heroTitle }}"
         class="absolute inset-0 w-full h-full object-cover parallax-hero img-fade opacity-30"
         style="transform: scale(1.05);"
         loading="eager" onload="this.classList.add('is-loaded')" />
    <div class="absolute inset-0" style="background: linear-gradient(to bottom, rgba(20,35,40,0.6) 0%, rgba(20,35,40,0.9) 100%);"></div>
  {% endif %}

  {# Decorative #}
  <div class="absolute -top-20 -end-20 w-[500px] h-[500px] rounded-full pointer-events-none"
       style="background: radial-gradient(circle, var(--color-accent) 0%, transparent 60%); opacity: 0.06;"></div>

  <div class="relative z-10 container mx-auto px-12 max-lg:px-6 max-sm:px-4 py-28 max-lg:py-20 max-sm:py-16 text-center">
    {% if heroSubtitle %}
      <span class="inline-block text-[11px] font-bold tracking-[0.25em] uppercase text-white/50 mb-5 reveal">
        {{ heroSubtitle }}
      </span>
    {% endif %}

    {% if heroTitle %}
      <h1 class="text-white font-bold mb-6 reveal" style="font-size: clamp(2rem, 5vw, 3.5rem); line-height: 1.15;">
        {{ heroTitle }}
      </h1>
    {% endif %}

    {# Decorative line #}
    <div class="flex justify-center reveal">
      <div class="w-12 h-[2px] rounded-full" style="background: rgba(255,255,255,0.3);"></div>
    </div>
  </div>
</section>


{# ═══════════════════════════════════════ #}
{# ——— 2. STORY ——— #}
{# ═══════════════════════════════════════ #}

{% if storyTitle or storyText %}
<section class="bg-section-a py-24 max-lg:py-16 max-sm:py-12 relative overflow-hidden">

  <div class="absolute -top-20 -start-20 w-[500px] h-[500px] rounded-full pointer-events-none"
       style="background: radial-gradient(circle, var(--color-accent) 0%, transparent 60%); opacity: 0.07;"></div>

  <div class="container mx-auto px-12 max-lg:px-6 max-sm:px-4 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 max-lg:gap-10 items-center">

      {# Image Side #}
      {% if storyImage and storyImage.fileUrl %}
        <div class="reveal">
          <div class="relative overflow-hidden rounded-3xl max-sm:rounded-2xl aspect-[4/5]">
            <img src="{{ storyImage.fileUrl }}" alt="{{ storyTitle }}"
                 class="w-full h-full object-cover img-fade"
                 loading="lazy" onload="this.classList.add('is-loaded')" />
          </div>
        </div>
      {% endif %}

      {# Text Side #}
      <div class="{% if not storyImage or not storyImage.fileUrl %}lg:col-span-2 max-w-2xl mx-auto text-center{% endif %}">
        {% if storyTitle %}
          <div class="reveal">
            <span class="inline-block text-[11px] font-bold tracking-[0.2em] uppercase mb-4"
                  style="color: var(--color-accent);">{{ storyTitle }}</span>
          </div>
        {% endif %}

        {% if storyText %}
          <div class="reveal prose-sukoon text-[15px] max-sm:text-[14px] leading-[1.9] text-secondary"
               style="max-width: 55ch;">
            {{ storyText }}
          </div>
        {% endif %}
      </div>

    </div>
  </div>
</section>
{% endif %}


{# ═══════════════════════════════════════ #}
{# ——— 3. MISSION / VISION ——— #}
{# ═══════════════════════════════════════ #}

{% if missionTitle or missionText %}
<section class="bg-section-b py-24 max-lg:py-16 max-sm:py-12 relative overflow-hidden">

  <div class="absolute -bottom-24 -end-24 w-[500px] h-[500px] rounded-full pointer-events-none"
       style="background: radial-gradient(circle, var(--color-accent) 0%, transparent 60%); opacity: 0.06;"></div>

  <div class="container mx-auto px-12 max-lg:px-6 max-sm:px-4 relative z-10">
    <div class="max-w-2xl mx-auto text-center">

      {% if missionTitle %}
        <div class="reveal">
          <span class="inline-block text-[11px] font-bold tracking-[0.2em] uppercase mb-5"
                style="color: var(--color-accent);">{{ missionTitle }}</span>
        </div>
      {% endif %}

      {% if missionText %}
        <p class="reveal text-xl max-sm:text-lg leading-[1.8] text-secondary font-light" style="max-width: 50ch; margin-inline: auto;">
          {{ missionText }}
        </p>
      {% endif %}

      {# Decorative quote marks #}
      <div class="reveal mt-8">
        <svg class="w-8 h-8 mx-auto" style="color: var(--color-accent); opacity: 0.3;" fill="currentColor" viewBox="0 0 24 24">
          <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
        </svg>
      </div>

    </div>
  </div>
</section>
{% endif %}


{# ═══════════════════════════════════════ #}
{# ——— 4. VALUES ——— #}
{# ═══════════════════════════════════════ #}

{% if values and values | length > 0 %}
<section class="bg-section-a py-24 max-lg:py-16 max-sm:py-12 relative overflow-hidden">

  <div class="absolute -top-16 -end-16 w-[500px] h-[500px] rounded-full pointer-events-none"
       style="background: radial-gradient(circle, var(--color-accent) 0%, transparent 60%); opacity: 0.07;"></div>
  <div class="absolute -bottom-20 -start-20 w-[450px] h-[450px] rounded-full pointer-events-none"
       style="background: radial-gradient(circle, var(--color-accent) 0%, transparent 60%); opacity: 0.05;"></div>

  <div class="container mx-auto px-12 max-lg:px-6 max-sm:px-4 relative z-10">

    {% if valuesTitle %}
      <div class="text-center mb-16 max-sm:mb-10 reveal">
        <span class="inline-block text-[11px] font-bold tracking-[0.2em] uppercase mb-4"
              style="color: var(--color-accent);">{{ valuesTitle }}</span>
      </div>
    {% endif %}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-sm:gap-6 max-w-4xl mx-auto">
      {% for block in values %}
        {% set icon = block.data.icon | default('heart') %}
        <div class="reveal text-center group">

          {# Icon #}
          <div class="w-14 h-14 mx-auto mb-5 rounded-2xl flex items-center justify-center transition-colors duration-300"
               style="background: var(--color-section-b); border: 1px solid var(--color-border);">

            {% if icon == 'heart' %}
              <svg class="w-5 h-5" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"/>
              </svg>
            {% elif icon == 'star' %}
              <svg class="w-5 h-5" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"/>
              </svg>
            {% elif icon == 'shield' %}
              <svg class="w-5 h-5" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"/>
              </svg>
            {% elif icon == 'leaf' %}
              <svg class="w-5 h-5" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.115 5.19l.319 1.913A6 6 0 008.11 10.36L9.75 12l-.387.775c-.217.433-.132.956.21 1.298l1.348 1.348c.21.21.329.497.329.795v1.089c0 .426.24.815.622 1.006l.153.076c.433.217.956.132 1.298-.21l.723-.723a8.7 8.7 0 002.288-4.042 1.087 1.087 0 00-.358-1.099l-1.33-1.108c-.251-.21-.582-.299-.905-.245l-1.17.195a1.125 1.125 0 01-.98-.314l-.295-.295a1.125 1.125 0 010-1.591l.13-.132a1.125 1.125 0 011.3-.21l.603.302a.809.809 0 001.086-1.086L14.25 7.5l1.256-.837a4.5 4.5 0 001.528-1.732l.146-.292M6.115 5.19A9 9 0 1017.18 4.64M6.115 5.19A8.965 8.965 0 0112 3c1.929 0 3.716.607 5.18 1.64"/>
              </svg>
            {% elif icon == 'gem' %}
              <svg class="w-5 h-5" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 00-2.455 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z"/>
              </svg>
            {% elif icon == 'hand' %}
              <svg class="w-5 h-5" style="color: var(--color-accent);" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.05 4.575a1.575 1.575 0 10-3.15 0v3.15M10.05 4.575a1.575 1.575 0 013.15 0v3.15M10.05 4.575v3.15M3.75 12h16.5M3.75 12a1.125 1.125 0 01-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125h.872a2.625 2.625 0 011.839.754l1.289 1.268M3.75 12v6.375c0 1.657 1.343 3 3 3h10.5c1.657 0 3-1.343 3-3V12M3.75 12h3.375m13.125 0h-3.375m0 0l1.289-1.268a2.625 2.625 0 011.839-.754h.872c.621 0 1.125.504 1.125 1.125v2.25c0 .621-.504 1.125-1.125 1.125h-.872"/>
              </svg>
            {% endif %}
          </div>

          {# Title #}
          {% if block.data.title %}
            <h3 class="text-[15px] font-semibold text-primary mb-2.5">{{ block.data.title }}</h3>
          {% endif %}

          {# Description #}
          {% if block.data.description %}
            <p class="text-[13px] leading-relaxed text-tertiary" style="max-width: 30ch; margin-inline: auto;">
              {{ block.data.description }}
            </p>
          {% endif %}

        </div>
      {% endfor %}
    </div>

  </div>
</section>
{% endif %}
