{# ===== SUKOON ANNOUNCEMENT BAR ===== #}

{% set announcements = widget.blocks %}
{% set bgColor = widget.data.background_color | default('#00838F') %}
{% set txtColor = widget.data.text_color | default('#FFFFFF') %}
{% set speed = widget.data.speed | default(4) %}
{% set closable = widget.data.closable %}
{% set barId = widget.id %}

{% if announcements and announcements | length > 0 %}
<div x-data="{ closed: false }" x-show="!closed" x-collapse.duration.300ms id="{{ barId }}"
     style="background: {{ bgColor }}; color: {{ txtColor }};">

  <div class="relative flex items-center justify-center h-10 max-sm:h-9 overflow-hidden">

    {# ——— Single Announcement ——— #}
    {% if announcements | length == 1 %}
      {% set item = announcements[0] %}
      {% set link = item.data.link %}
      {% set icon = item.data.icon | default('none') %}

      <{% if link %}a href="{{ link }}"{% else %}div{% endif %}
        class="flex items-center justify-center gap-2 px-10 text-[12px] max-sm:text-[11px] font-medium tracking-wide {% if link %}hover:opacity-80 transition-opacity{% endif %}"
        style="color: {{ txtColor }};">

        {# Icon #}
        {% if icon != 'none' %}
          {% if icon == 'shipping' %}
            <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0H21M3.375 14.25V3.375c0-.621.504-1.125 1.125-1.125h9.75c.621 0 1.125.504 1.125 1.125v3.026M12 9.75h6.75M12 9.75L9.75 12m2.25-2.25L9.75 7.5m8.25 3.375v5.25c0 .621-.504 1.125-1.125 1.125h-.872"/></svg>
          {% elif icon == 'offer' %}
            <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z"/><path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z"/></svg>
          {% elif icon == 'star' %}
            <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"/></svg>
          {% elif icon == 'time' %}
            <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          {% endif %}
        {% endif %}

        <span>{{ item.data.text }}</span>
      </{% if link %}a{% else %}div{% endif %}>

    {# ——— Multiple Announcements — Swiper Autoplay ——— #}
    {% else %}
      <div class="swiper w-full h-full" id="swiper-{{ barId }}">
        <div class="swiper-wrapper">
          {% for item in announcements %}
            {% set link = item.data.link %}
            {% set icon = item.data.icon | default('none') %}
            <div class="swiper-slide !flex items-center justify-center">
              <{% if link %}a href="{{ link }}"{% else %}div{% endif %}
                class="flex items-center justify-center gap-2 px-10 text-[12px] max-sm:text-[11px] font-medium tracking-wide {% if link %}hover:opacity-80 transition-opacity{% endif %}"
                style="color: {{ txtColor }};">

                {# Icon #}
                {% if icon != 'none' %}
                  {% if icon == 'shipping' %}
                    <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0H21M3.375 14.25V3.375c0-.621.504-1.125 1.125-1.125h9.75c.621 0 1.125.504 1.125 1.125v3.026M12 9.75h6.75M12 9.75L9.75 12m2.25-2.25L9.75 7.5m8.25 3.375v5.25c0 .621-.504 1.125-1.125 1.125h-.872"/></svg>
                  {% elif icon == 'offer' %}
                    <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z"/><path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z"/></svg>
                  {% elif icon == 'star' %}
                    <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"/></svg>
                  {% elif icon == 'time' %}
                    <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                  {% endif %}
                {% endif %}

                <span>{{ item.data.text }}</span>
              </{% if link %}a{% else %}div{% endif %}>
            </div>
          {% endfor %}
        </div>
      </div>

      <script>
        new Swiper('#swiper-{{ barId }}', {
          direction: 'vertical',
          loop: true,
          autoplay: { delay: {{ speed * 1000 }}, disableOnInteraction: false },
          speed: 500,
          allowTouchMove: false
        });
      </script>
    {% endif %}

    {# ——— Close Button ——— #}
    {% if closable %}
      <button @click="closed = true"
              class="absolute end-3 top-1/2 -translate-y-1/2 w-6 h-6 flex items-center justify-center rounded-full transition-colors hover:bg-white/10"
              style="color: {{ txtColor }};" aria-label="Close">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    {% endif %}

  </div>
</div>
{% endif %}
