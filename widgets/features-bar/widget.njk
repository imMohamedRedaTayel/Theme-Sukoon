{# ===== SUKOON FEATURES BAR ===== #}

{% set bgStyle = widget.data.background_style | default('transparent') %}
{% set showDividers = widget.data.show_dividers | default(true) %}
{% set layout = widget.data.layout | default('horizontal') %}
{% set features = widget.blocks | default([]) %}

{# Background classes #}
{% set bgClass = '' %}
{% set textClass = 'text-secondary' %}
{% set iconClass = 'text-[var(--color-accent)]' %}
{% set dividerClass = '' %}
{% set dividerStyle = 'background: var(--color-border);' %}

{% if bgStyle == 'light' %}
  {% set bgClass = 'bg-[var(--color-section-b)]' %}
{% elif bgStyle == 'dark' %}
  {% set bgClass = '' %}
  {% set textClass = 'text-white/90' %}
  {% set iconClass = 'text-white' %}
  {% set dividerClass = 'bg-white/15' %}
  {% set dividerStyle = '' %}
{% elif bgStyle == 'accent' %}
  {% set bgClass = 'bg-[var(--color-accent)]' %}
  {% set textClass = 'text-white/90' %}
  {% set iconClass = 'text-white' %}
  {% set dividerClass = 'bg-white/20' %}
  {% set dividerStyle = '' %}
{% endif %}

{# ——— Icon Macro ——— #}
{% macro featureIcon(icon, sizeClass) %}
  {% if icon == 'shipping' %}
    <svg class="{{ sizeClass }}" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0H21M3.375 14.25V3.375c0-.621.504-1.125 1.125-1.125h9.75c.621 0 1.125.504 1.125 1.125v3.026M12 9.75h6.75M12 9.75L9.75 12m2.25-2.25L9.75 7.5m8.25 3.375v5.25c0 .621-.504 1.125-1.125 1.125h-.872"/>
    </svg>
  {% elif icon == 'shield' %}
    <svg class="{{ sizeClass }}" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"/>
    </svg>
  {% elif icon == 'refresh' %}
    <svg class="{{ sizeClass }}" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182"/>
    </svg>
  {% elif icon == 'clock' %}
    <svg class="{{ sizeClass }}" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>
  {% elif icon == 'heart' %}
    <svg class="{{ sizeClass }}" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"/>
    </svg>
  {% elif icon == 'star' %}
    <svg class="{{ sizeClass }}" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"/>
    </svg>
  {% elif icon == 'tag' %}
    <svg class="{{ sizeClass }}" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z"/>
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z"/>
    </svg>
  {% elif icon == 'headphones' %}
    <svg class="{{ sizeClass }}" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 01-.825-.242m9.345-8.334a2.126 2.126 0 00-.476-.095 48.64 48.64 0 00-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0011.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155"/>
    </svg>
  {% elif icon == 'gift' %}
    <svg class="{{ sizeClass }}" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 11.25v8.25a1.5 1.5 0 01-1.5 1.5H5.25a1.5 1.5 0 01-1.5-1.5v-8.25M12 4.875A2.625 2.625 0 109.375 7.5H12m0-2.625V7.5m0-2.625A2.625 2.625 0 1114.625 7.5H12m0 0V21m-8.625-9.75h18c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125h-18c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z"/>
    </svg>
  {% elif icon == 'check' %}
    <svg class="{{ sizeClass }}" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z"/>
    </svg>
  {% endif %}
{% endmacro %}


<section id="{{ widget.id }}" class="{{ bgClass }} reveal"
         {% if bgStyle == 'dark' %}style="background: linear-gradient(135deg, #1A2C32 0%, #142328 100%);"{% endif %}>
  <div class="container mx-auto px-12 max-lg:px-6 max-sm:px-4">

    {% if layout == 'grid' %}
    {# ——— Grid Layout ——— #}
    <div class="grid grid-cols-2 lg:grid-cols-{{ features | length if features | length <= 4 else 4 }} gap-8 max-sm:gap-6 py-14 max-sm:py-10 reveal-stagger">
      {% for block in features %}
        {% set icon = block.data.icon | default('shipping') %}
        {% set title = block.data.title %}
        {% set desc = block.data.description %}
        <div class="flex flex-col items-center text-center gap-3">
          <div class="w-12 h-12 rounded-2xl flex items-center justify-center {{ iconClass }}"
               style="{% if bgStyle == 'transparent' or bgStyle == 'light' %}background: var(--color-accent-light);{% else %}background: rgba(255,255,255,0.1);{% endif %}">
            {{ featureIcon(icon, 'w-5 h-5') }}
          </div>
          {% if title %}
            <h4 class="{{ textClass }} text-sm font-semibold">{{ title }}</h4>
          {% endif %}
          {% if desc %}
            <p class="{{ textClass }} text-xs opacity-70 leading-relaxed" style="max-width: 22ch;">{{ desc }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    {% else %}
    {# ——— Horizontal Layout ——— #}
    <div class="flex items-center justify-center max-lg:justify-start gap-0 py-8 max-sm:py-6 overflow-x-auto scrollbar-hide reveal-stagger">
      {% for block in features %}
        {% set icon = block.data.icon | default('shipping') %}
        {% set title = block.data.title %}
        {% set desc = block.data.description %}

        {# Divider #}
        {% if not loop.first and showDividers %}
          <div class="w-px h-10 {{ dividerClass }} shrink-0 mx-8 max-lg:mx-5 max-sm:mx-4 max-sm:h-8" {% if dividerStyle %}style="{{ dividerStyle }}"{% endif %}></div>
        {% endif %}

        <div class="flex items-center gap-3.5 max-sm:gap-2.5 shrink-0">
          <div class="w-10 h-10 max-sm:w-9 max-sm:h-9 rounded-xl flex items-center justify-center {{ iconClass }}"
               style="{% if bgStyle == 'transparent' or bgStyle == 'light' %}background: var(--color-accent-light);{% else %}background: rgba(255,255,255,0.1);{% endif %}">
            {{ featureIcon(icon, 'w-[18px] h-[18px] max-sm:w-4 max-sm:h-4') }}
          </div>

          <div class="flex flex-col">
            {% if title %}
              <span class="{{ textClass }} text-[13px] max-sm:text-xs font-semibold whitespace-nowrap">{{ title }}</span>
            {% endif %}
            {% if desc %}
              <span class="{{ textClass }} text-[11px] opacity-60 whitespace-nowrap">{{ desc }}</span>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
    {% endif %}

  </div>
</section>
